<html>
<body>

<h1>Add a new game</h1>

{{#error}}
    <div style="color: red">{{error}}</div>
{{/error}}

<form action="/create-game" method="post">
    <div>
        <!-- do we have errors for the name field? -->
        {{#errors.name}}
            <div class="error">{{.}}</div>
        {{/errors.name}}
        <input type="text" name="name" placeholder="Game name" value="{{game.name}}">
    </div>

    <div>
        {{#errors.genre}}
            <div class="error">{{.}}</div>
        {{/errors.genre}}
        <input type="text" name="genre" placeholder="Game genre" value="{{game.genre}}">
    </div>

    <div>
        {{#errors.platform}}
            <div class="error">{{.}}</div>
        {{/errors.platform}}
        <input type="text" name="platform" placeholder="Platform" value="{{game.platform}}">
    </div>

    <div>
        {{#errors.releaseYear}}
            <div class="error">{{.}}</div>
        {{/errors.releaseYear}}
        <input type="text" name="releaseYear" placeholder="Release year" value="{{game.releaseYearString}}">
    </div>

    <button type="submit">Add game</button>
</form>

</body>
</html>